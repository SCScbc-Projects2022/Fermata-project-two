<section class="mt-5 row align-items-center">
  <div class="container-fluid">
    <div class="row">
      <div class="col-2 mt-3">
        <p class="small-text d-inline">Sent to: {{letter.recipient_name}}</p>
        <p class="small-text d-inline mx-5">Sent from: {{letter.sign_off}}</p>
        <p class="small-text">On: {{format_date letter.updatedAt}}</p>
      </div>
    </div>    
    <div class="container-fluid d-flex mt-5 justify-content-around align-items-center">
      <textarea name="" id="letter-preview" style={{letter.font.style_tag}} class="w-50 vh-75 align-text-top"> 
      {{letter.letter_body}}
      </textarea>
    </div>
  </div>
  <div class="container-fluid d-flex mt-5 justify-content-around align-items-center"></div>
  <div class="container-fluid d-flex mt-5 justify-content-evenly">
    <div class="now-playing">Now Playing:</div>
    <div>
      <span id="artist-select">Arthur Rubenstein - </span>
      <span id="song-select">Nocturnes, Op. 9: No. 2 in E-Flat Major</span> 
    </div>
  </div>
  <iframe width="0" height="0" src="https://www.youtube.com/embed/8L0XuwPzmgU?controls=0&autoplay=1" title="YouTube video player" frameborder="0" allow="autoplay; accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</section>