<main class="mt-5 row align-items-center">
      <div
        class="container-fluid d-flex mt-5 justify-content-center align-items-center"
      >
        <h1>Sign-Up</h1>
      </div>

      <div
        class="container-fluid d-flex mt-5 justify-content-around align-items-center"
      >
        <h4>Name:</h4>
        <div class="input-form">
          <input type="text" name="" id="signupname-input" />
        </div>
      </div>

      <div
        class="container-fluid d-flex mt-5 justify-content-around align-items-center"
      >
        <h4>Email:</h4>
        <div class="input-form">
          <input type="email" name="" id="signupemail-input" />
        </div>
      </div>

      <div
        class="container-fluid d-flex mt-5 justify-content-around align-items-center"
      >
        <h4>Password:</h4>
        <div class="input-form">
          <input type="password" name="" id="password-input" />
        </div>
      </div>

      <div
        class="container-fluid d-flex mt-5 justify-content-around align-items-center"
      >
        <button
          type="button"
          class="btn btn-lg btn-outline-dark"
          id="signup-btn"
        >
          Next
        </button>
      </div>
    </main>
